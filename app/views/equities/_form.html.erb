<%= form_for(equity) do |f| %>
<% if equity.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(equity.errors.count, "error") %>
    prohibited this equity from being saved:</h2>

  <ul>
    <% equity.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="field">
  <%= f.label :symbol %>
  <%= f.text_field :symbol %>
</div>
<div class="field">
  <%= f.label :shares_owned %>
  <%= f.text_field :shares_owned %>
</div>

<div class="field">
  <%= f.label :price_paid %>
  <%= f.text_field :price_paid %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
